#Your Makefile should not compile if the header file m.h is missing

CC = gcc
SRC = main.c school.c
NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) -o $@ $^ $(CFLAGS)

%.o: %.c m.h
	$(CC) -c -o $@ $< $(CFLAGS)

clean:
	$(RM) $(NAME) *~ *#*

oclean:
	$(RM) $(SRC:.c=.o)

fclean: oclean clean

re: fclean all

